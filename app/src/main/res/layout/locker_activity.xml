<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.calistheicslogger.Tools.dslv.DragSortListView
        android:id="@+id/lockerDSLV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:textFilterEnabled="false"
        app:layout_constraintBottom_toBottomOf="@id/hardTextView"
        app:layout_constraintEnd_toStartOf="@id/easyTextView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/easyTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/easyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Thin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/angleToggleButton" />

    <TextView
        android:id="@+id/hardTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="128dp"
        android:text="Thick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/bandToggleButton"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:checked="true"
        android:enabled="false"
        android:onClick="OnToggleClick"
        android:text="ToggleButton"
        android:textOff="Bands"
        android:textOn="Bands"
        app:layout_constraintEnd_toStartOf="@+id/angleToggleButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/angleToggleButton" />

    <ToggleButton
        android:id="@+id/angleToggleButton"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:layout_marginTop="16dp"
        android:onClick="OnToggleClick"
        android:text="ToggleButton"
        android:textOff="Angles"
        android:textOn="Angles"
        app:layout_constraintBottom_toTopOf="@id/easyTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/bandToggleButton"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>